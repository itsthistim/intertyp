---
import Layout from "@/layouts/Layout.astro";
import Nav from "@/components/Nav.astro";
import Products from "@/components/Products.astro";
import CardGrid from "@/components/CardGrid.astro";
import Footer from "@/components/Footer.astro";

const res = await fetch(new URL("/api/produkte", Astro.url));
let products = await res.json();
---

<Layout title="Alle Produkte | Intertyp GmbH">
	<Nav />
	<main>
		<Products />
		<CardGrid
			items={products}
			title="Alle Produkte"
			description="Hier finden Sie unser komplettes Sortiment an Produkten und Dienstleistungen."
			errorMessage="Keine Produkte gefunden."
		/>
	</main>
	<Footer />
</Layout>

<style>
	main {
		max-width: 1200px;
		margin: 2rem auto;
		padding: 0 1rem;
	}
</style>
