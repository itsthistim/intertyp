---
import Layout from "@/layouts/Layout.astro";
import Nav from "@/components/Nav.astro";
import About from "@/components/About.astro";
import Products from "@/components/Products.astro";
import Projects from "@/components/Projects.astro";
import Footer from "@/components/Footer.astro";
import Hero from "@/components/Hero.astro";
---

<Layout title="Intertyp GmbH – Ihr Spezialist für Außenwerbung">
	<Nav mode="light" />
	 <Hero title="InterTyp" subtitle="Ihr Spezialist für Außenwerbung" />
	<main>
		<About />
		<Products />
		<Projects />
	</main>
	<Footer />
</Layout>

<style>
	main {
		min-height: 60vh;
		margin: 0 auto;
		padding: 0;
		max-width: 1200px;
		margin-top: 76vh; /* Reduce the gap below the hero section */
	}

	h2 {
		text-align: center;
		font-size: 2.2rem;
		margin-top: 2rem;
	}

	h2 span {
		color: rgb(var(--clr-text));
		text-decoration: underline rgb(var(--clr-primary)) 2px;
		text-underline-offset: 3px;
	}
</style>
