---
import Layout from "@/layouts/Layout.astro";
import Nav from "@/components/Nav.astro";
import About from "@/components/About.astro";
import Products from "@/components/Products.astro";
import Projects from "@/components/Projects.astro";
import Footer from "@/components/Footer.astro";
import Hero from "@/components/Hero.astro";
---

<Layout title="Intertyp GmbH – Ihr Spezialist für Außenwerbung">
	<Nav mode="light" />
	<Hero title="InterTyp" subtitle="Ihr Spezialist für Außenwerbung" />
	<main>
		<About />
		<!-- <Products /> -->
		<Projects />
	</main>
	<Footer />
</Layout>

<style>
	main {
		min-height: 60vh;
		margin: 0 auto;
		padding: 2rem 1rem;
		max-width: 1200px;
		/* No margin-top needed since Hero is now in normal flow */
	}
	h2 {
		text-align: center;
		font-size: 1.8rem !important;
		margin-top: 2rem;
	}

	h2 span {
		color: rgb(var(--clr-text));
		text-decoration: underline rgb(var(--clr-primary)) 2px;
		text-underline-offset: 3px;
	}

	/* Mobile responsive adjustments */
	@media (max-width: 768px) {
		main {
			padding: 1rem;
		}

		h2 {
			font-size: 1.4rem !important;
		}
	}

	@media (max-width: 480px) {
		h2 {
			font-size: 1.2rem !important;
		}
	}
</style>
