---
import Layout from "@/layouts/Layout.astro";
import Nav from "@/components/Nav.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Gallery from "@/components/Gallery.astro";

const { slug } = Astro.params;
const res = await fetch(new URL("/api/projekte/" + slug, Astro.url));

if (!res.ok) {
	return Astro.rewrite("/404");
}

let project = await res.json();

let images = [];
if (project.gallery && project.gallery.images) {
	images = project.gallery.images.map((img: any) => {
		return {
			src: img.url,
			alt: img.alt,
			width: img.width,
			height: img.height
		};
	});
}
---



<Layout title={`${project.title} â€ Intertyp`}>
	<Nav />
	<Header title={project.title} src={project.cover_image?.url || ""} />
	<main>
		<div class="project-info">
			{project.project_date && <p class="project-date">{new Date(project.project_date).toLocaleDateString("de-DE", { year: "numeric", month: "long", day: "numeric" })}</p>}
			<p class="project-desc">{project.description}</p>
		</div>
		<Gallery images={images} galleryClass="project-gallery" />
	</main>
	<Footer />
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
		max-width: 1100px;
		margin: 0 auto 4rem;
		padding: 0 2rem;
	}

	.project-info {
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 20%, rgba(1, 126, 1, 0.1) 100%);
		backdrop-filter: blur(2px);
		border-radius: 1.2rem;
		box-shadow: 0 2px 16px rgba(0, 0, 0, 0.07);
		padding: 2.5rem 2rem 2rem 2rem;
		margin: 2.5rem 0 2.5rem 0;
		text-align: left;
		position: relative;
		z-index: 2;
	}
	.project-info h1 {
		font-size: 1.9rem !important;
		font-weight: 800;
		text-decoration: underline;
		text-decoration-color: rgb(var(--clr-primary));
		text-decoration-thickness: 0.22rem;
		text-underline-offset: 0.45rem;
		margin-bottom: 0.7rem;
	}

	.project-desc {
		font-size: 1.1rem !important;
		color: rgb(var(--clr-text));
		margin: 0.7rem 0 1.2rem;
		line-height: 1.7;
	}

	.project-date {
		font-size: 0.95rem !important;
		color: rgba(var(--clr-text), 0.7);
		margin-bottom: 0.5rem;
	}

	@media (max-width: 900px) {
		.project-info h1 {
			font-size: 1.6rem !important;
		}

		.project-desc {
			font-size: 1rem !important;
		}

		.project-date {
			font-size: 0.9rem !important;
		}
	}

	@media (max-width: 600px) {
		.project-info {
			padding: 2rem 1.5rem 1.5rem 1.5rem;
			margin: 2rem 0;
		}
		.project-info h1 {
			font-size: 1.4rem !important;
		}

		.project-desc {
			font-size: 0.95rem !important;
		}

		.project-date {
			font-size: 0.85rem !important;
		}
	}

	@media (max-width: 480px) {
		main {
			padding: 0 1rem;
		}

		.project-info {
			padding: 1.5rem 1rem;
			margin: 1.5rem 0;
		}
		.project-info h1 {
			font-size: 1.2rem !important;
		}

		.project-desc {
			font-size: 0.9rem !important;
			line-height: 1.6;
		}

		.project-date {
			font-size: 0.8rem !important;
		}
	}
</style>
