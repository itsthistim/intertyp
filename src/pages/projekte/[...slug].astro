---
import "photoswipe/dist/photoswipe.css";
import { Image } from "astro:assets";

import Layout from "@/layouts/Layout.astro";
import Nav from "@/components/Nav.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

const { slug } = Astro.params;
const res = await fetch(new URL("/api/projekte/" + slug, Astro.url));

if (!res.ok) {
	return Astro.rewrite("/404");
}

let project = await res.json();

let images = [];
if (project.gallery && project.gallery.images) {
	images = project.gallery.images.map((img: any) => {
		return {
			src: img.url,
			alt: img.alt,
			width: img.width,
			height: img.height
		};
	});
}
---

<script>
	import PhotoSwipeLightbox from "photoswipe/lightbox";
	const initLightbox = () => {
		const lightbox = new PhotoSwipeLightbox({
			gallery: ".project-gallery",
			children: "a.gallery-item",
			bgOpacity: 0.8,
			pswpModule: () => import("photoswipe")
		});
		lightbox.init();
	};

	document.addEventListener("astro:page-load", initLightbox);
	document.addEventListener("astro:after-swap", initLightbox);
</script>

<Layout title={`${project.title} ‐ Intertyp`}>
	<Nav />
	<Header title={project.title} src={project.cover_image?.url || ""} />
	<main>
		<div class="project-info">
			{project.project_date && <p class="project-date">{new Date(project.project_date).toLocaleDateString("de-DE", { year: "numeric", month: "long", day: "numeric" })}</p>}
			<p class="project-desc">{project.description}</p>
		</div>
		{
			images.length > 0 && (
				<div class="project-gallery">
					{images.map((img: any) => (
						<a href={img.src} class="gallery-item" data-pswp-width={img.width} data-pswp-height={img.height}>
							<Image src={img.src} alt={img.alt || ""} width={img.width} height={img.height} />
						</a>
					))}
				</div>
			)
		}
	</main>
	<Footer />
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
		max-width: 1100px;
		margin: 0 auto 4rem;
		padding: 0 2rem;
	}

	.project-info {
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 20%, rgba(1, 126, 1, 0.1) 100%);
		backdrop-filter: blur(2px);
		border-radius: 1.2rem;
		box-shadow: 0 2px 16px rgba(0, 0, 0, 0.07);
		padding: 2.5rem 2rem 2rem 2rem;
		margin: 2.5rem 0 2.5rem 0;
		text-align: left;
		position: relative;
		z-index: 2;
	}
	.project-info h1 {
		font-size: 1.9rem !important;
		font-weight: 800;
		text-decoration: underline;
		text-decoration-color: rgb(var(--clr-primary));
		text-decoration-thickness: 0.22rem;
		text-underline-offset: 0.45rem;
		margin-bottom: 0.7rem;
	}

	.project-desc {
		font-size: 1.1rem !important;
		color: rgb(var(--clr-text));
		margin: 0.7rem 0 1.2rem;
		line-height: 1.7;
	}

	.project-date {
		font-size: 0.95rem !important;
		color: rgba(var(--clr-text), 0.7);
		margin-bottom: 0.5rem;
	}

	.project-gallery {
		column-count: 3;
		column-gap: 1.5rem;
		margin-top: 2.5rem;
	}
	@media (max-width: 900px) {
		.project-gallery {
			column-count: 2;
		}
		.project-info h1 {
			font-size: 1.6rem !important;
		}

		.project-desc {
			font-size: 1rem !important;
		}

		.project-date {
			font-size: 0.9rem !important;
		}
	}
	@media (max-width: 600px) {
		.project-gallery {
			column-count: 1;
		}

		.project-info {
			padding: 2rem 1.5rem 1.5rem 1.5rem;
			margin: 2rem 0;
		}
		.project-info h1 {
			font-size: 1.4rem !important;
		}

		.project-desc {
			font-size: 0.95rem !important;
		}

		.project-date {
			font-size: 0.85rem !important;
		}
	}

	@media (max-width: 480px) {
		main {
			padding: 0 1rem;
		}

		.project-info {
			padding: 1.5rem 1rem;
			margin: 1.5rem 0;
		}
		.project-info h1 {
			font-size: 1.2rem !important;
		}

		.project-desc {
			font-size: 0.9rem !important;
			line-height: 1.6;
		}

		.project-date {
			font-size: 0.8rem !important;
		}
	}

	.gallery-item {
		display: block;
		margin-bottom: 1.5rem;
		break-inside: avoid;
		border-radius: 0.7rem;
		box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
		background: #fff;
		transition:
			transform 0.18s,
			box-shadow 0.18s;
		overflow: hidden;
		width: 100%;
		padding: 0;
		max-width: 100%;
	}

	.gallery-item:hover {
		transform: translateY(-6px) scale(1.03);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.18);
		z-index: 2;
	}

	.gallery-item img {
		width: 100%;
		height: auto;
		display: block;
		object-fit: cover;
		object-position: center;
		border-radius: 0.7rem 0.7rem 0 0;
		transition: filter 0.18s;
		background: #f8f8f8;
	}
</style>
