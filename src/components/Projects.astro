---
import { Image } from "astro:assets";
import { promise } from "astro:schema";

const res = await fetch(new URL("/api/projekte", Astro.url));
let projects = await res.json();
if (!Array.isArray(projects) || projects.length < 5) {
	return null;
}

projects = projects.sort(() => Math.random() - 0.5).slice(0, 5);
---

<section id="projects">
	<h2>Unsere <span>Referenzen</span></h2>

	<div class="bento">
		{
			projects.map((project: any, i: number) => (
				<div class={`bento-item bento-item-${i + 1}`}>
					<a href={project.link?.slug || "#"}>
						<Image src={project.cover_image?.url} alt={project.cover_image?.alt || project.title || ""} width={project.cover_image?.width} height={project.cover_image?.height} />
						<span class="bento-title">{project.title}</span>
					</a>
				</div>
			))
		}
	</div>
</section>

<style>
	.bento {
		display: grid;
		grid-template-columns: 2fr 1fr 1fr;
		grid-template-rows: 1fr 1fr;
		gap: 32px;
		margin: 32px 0;
	}
	.bento-item {
		background: #fff;
		border-radius: 12px;
		overflow: hidden;
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
		position: relative;
		display: flex;
		align-items: flex-end;
		transition:
			transform 0.15s,
			box-shadow 0.15s;
	}
	.bento-item a {
		display: block;
		width: 100%;
		height: 100%;
		position: relative;
	}
	.bento-item img {
		display: block;
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 12px;
	}
	.bento-title {
		position: absolute;
		left: 0;
		bottom: 0;
		padding: 1.2rem 1.5rem;
		font-size: 1.5rem;
		font-weight: 700;
		color: #fff;
		text-shadow: 0 2px 8px rgba(0, 0, 0, 0.7);
		z-index: 2;
	}
	.bento-item-1 {
		grid-column: 1 / 2;
		grid-row: 1 / 3;
	}
	.bento-item-2 {
		grid-column: 2 / 3;
		grid-row: 1 / 2;
	}
	.bento-item-3 {
		grid-column: 3 / 4;
		grid-row: 1 / 2;
	}
	.bento-item-4 {
		grid-column: 2 / 3;
		grid-row: 2 / 3;
	}
	.bento-item-5 {
		grid-column: 3 / 4;
		grid-row: 2 / 3;
	}
	@media (max-width: 900px) {
		.bento {
			grid-template-columns: 1fr 1fr;
			grid-template-rows: repeat(3, 180px);
		}
		.bento-item-1 {
			grid-column: 1 / 2;
			grid-row: 1 / 3;
		}
		.bento-item-2 {
			grid-column: 2 / 3;
			grid-row: 1 / 2;
		}
		.bento-item-3 {
			grid-column: 2 / 3;
			grid-row: 2 / 3;
		}
		.bento-item-4 {
			grid-column: 1 / 2;
			grid-row: 3 / 4;
		}
		.bento-item-5 {
			grid-column: 2 / 3;
			grid-row: 3 / 4;
		}
	}
	@media (max-width: 600px) {
		.bento {
			grid-template-columns: 1fr;
			grid-template-rows: repeat(5, 140px);
			gap: 16px;
		}
		.bento-item,
		.bento-item img {
			border-radius: 12px !important;
		}
		.bento-item-1,
		.bento-item-2,
		.bento-item-3,
		.bento-item-4,
		.bento-item-5 {
			grid-column: 1 / 2 !important;
			grid-row: auto !important;
		}
	}
</style>
