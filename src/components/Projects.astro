---
const res = await fetch(new URL("/api/projekte", Astro.url));
let projects = await res.json();
if (!Array.isArray(projects) || projects.length < 5) {
	return null;
}
---

<section id="projects">
	<h2>Unsere <span>Referenzen</span></h2>

	<div class="bento">
		<div class="bento-item bento-item-1">
			<a href={projects[0].link?.slug || "#"}>
				<img src={projects[0].cover_image?.url} alt={projects[0].cover_image?.alt || projects[0].title} />
				<span class="bento-title">{projects[0].title}</span>
			</a>
		</div>
		<div class="bento-item bento-item-2">
			<a href={projects[1].link?.slug || "#"}>
				<img src={projects[1].cover_image?.url} alt={projects[1].cover_image?.alt || projects[1].title} />
				<span class="bento-title">{projects[1].title}</span>
			</a>
		</div>
		<div class="bento-item bento-item-3">
			<a href={projects[2].link?.slug || "#"}>
				<img src={projects[2].cover_image?.url} alt={projects[2].cover_image?.alt || projects[2].title} />
				<span class="bento-title">{projects[2].title}</span>
			</a>
		</div>
		<div class="bento-item bento-item-4">
			<a href={projects[3].link?.slug || "#"}>
				<img src={projects[3].cover_image?.url} alt={projects[3].cover_image?.alt || projects[3].title} />
				<span class="bento-title">{projects[3].title}</span>
			</a>
		</div>
		<div class="bento-item bento-item-5">
			<a href={projects[4].link?.slug || "#"}>
				<img src={projects[4].cover_image?.url} alt={projects[4].cover_image?.alt || projects[4].title} />
				<span class="bento-title">{projects[4].title}</span>
			</a>
		</div>
	</div>
</section>

<style>
	.bento {
		display: grid;
		grid-template-columns: 2fr 1fr 1fr;
		grid-template-rows: 1fr 1fr;
		gap: 32px;
		margin: 32px 0;
	}
	.bento-item {
		background: #fff;
		border-radius: 12px;
		overflow: hidden;
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
		position: relative;
		display: flex;
		align-items: flex-end;
		transition:
			transform 0.15s,
			box-shadow 0.15s;
	}
	.bento-item a {
		display: block;
		width: 100%;
		height: 100%;
		position: relative;
	}
	.bento-item img {
		display: block;
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 12px;
	}
	.bento-title {
		position: absolute;
		left: 0;
		bottom: 0;
		padding: 1.2rem 1.5rem;
		font-size: 1.5rem;
		font-weight: 700;
		color: #fff;
		text-shadow: 0 2px 8px rgba(0, 0, 0, 0.7);
		z-index: 2;
	}
	.bento-item-1 {
		grid-column: 1 / 2;
		grid-row: 1 / 3;
	}
	.bento-item-2 {
		grid-column: 2 / 3;
		grid-row: 1 / 2;
	}
	.bento-item-3 {
		grid-column: 3 / 4;
		grid-row: 1 / 2;
	}
	.bento-item-4 {
		grid-column: 2 / 3;
		grid-row: 2 / 3;
	}
	.bento-item-5 {
		grid-column: 3 / 4;
		grid-row: 2 / 3;
	}
	@media (max-width: 900px) {
		.bento {
			grid-template-columns: 1fr 1fr;
			grid-template-rows: repeat(3, 180px);
		}
		.bento-item-1 {
			grid-column: 1 / 2;
			grid-row: 1 / 3;
		}
		.bento-item-2 {
			grid-column: 2 / 3;
			grid-row: 1 / 2;
		}
		.bento-item-3 {
			grid-column: 2 / 3;
			grid-row: 2 / 3;
		}
		.bento-item-4 {
			grid-column: 1 / 2;
			grid-row: 3 / 4;
		}
		.bento-item-5 {
			grid-column: 2 / 3;
			grid-row: 3 / 4;
		}
	}
	@media (max-width: 600px) {
		.bento {
			grid-template-columns: 1fr;
			grid-template-rows: repeat(5, 140px);
			gap: 16px;
		}
		.bento-item,
		.bento-item img {
			border-radius: 12px !important;
		}
		.bento-item-1,
		.bento-item-2,
		.bento-item-3,
		.bento-item-4,
		.bento-item-5 {
			grid-column: 1 / 2 !important;
			grid-row: auto !important;
		}
	}
</style>
