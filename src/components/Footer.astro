---
import { Icon } from "astro-icon/components";
---

<div class="wave">
	<svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
		<path
			d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"
			class="shape-fill"></path>
	</svg>
</div>
<footer>
	<div class="footer-content">
		<div class="footer-section company-info">
			<h3>Intertyp GmbH</h3>
			<p>Ihr Spezialist für Außenwerbung</p>
			<div class="contact-info">
				<div class="contact-item">
					<Icon name="ph:map-pin" />
					<a href="https://maps.app.goo.gl/AxD4T8q99zNEYy3L7" target="_blank">Stockhofstraße 11, 4020 Linz</a>
				</div>
				<div class="contact-item">
					<Icon name="ph:envelope-open" />
					<a href="mailto:stempel@intertyp.at">stempel@intertyp.at</a>
				</div>
				<div class="contact-item">
					<Icon name="ph:phone" />
					<a href="tel:+43 732 66 30 00">+43 732 66 30 00</a>
				</div>
				<div class="contact-item">
					<Icon name="ph:clock" />
					<span>Mo - Do 09:00 - 12:00 Uhr</span>
				</div>
			</div>
		</div>

		<div class="footer-section navigation">
			<h4>Navigation</h4>
			<nav class="footer-nav">
				<a href="/">Start</a>
				<a href="/produkte">Produkte</a>
				<a href="/projekte">Kunden</a>
				<a href="/kontakt">Kontakt</a>
			</nav>
		</div>

		<div class="footer-section legal">
			<h4>Rechtliches</h4>
			<nav class="footer-nav">
				<a href="/impressum">Impressum</a>
				<a href="/privacy">Datenschutz</a>
			</nav>
		</div>
	</div>

	<div class="footer-bottom">
		<p>&copy; 2025 Intertyp GmbH. Alle Rechte vorbehalten.</p>
	</div>
</footer>

<style>	.wave {
		position: relative;
		width: 100%;
		line-height: 0;
		transform: rotate(180deg) translateY(-1px);
		z-index: -1;
	}

	.wave svg {
		width: 100%;
		height: 87px;
		display: block; /* Remove any inline spacing */
	}

	.wave .shape-fill {
		fill: #70a25f;
	}
	footer {
		background-color: #70a25f;
		color: white;
		z-index: 9000 !important;
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 3rem 2rem 2rem;
		display: grid;
		grid-template-columns: 2fr 1fr 1fr;
		gap: 3rem;
	}

	.footer-section h3 {
		font-size: 1.5rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
		color: white;
	}

	.footer-section h4 {
		font-size: 1.1rem;
		font-weight: 600;
		margin-bottom: 1rem;
		color: white;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.company-info p {
		font-style: italic;
		margin-bottom: 1.5rem;
		opacity: 0.9;
	}

	.contact-info {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.contact-item {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.contact-item [data-icon] {
		width: 1.1rem;
		height: 1.1rem;
		opacity: 0.8;
		flex-shrink: 0;
	}

	.contact-item a,
	.contact-item span {
		color: white;
		text-decoration: none;
		transition: opacity 0.2s ease;
	}

	.contact-item a:hover {
		opacity: 0.8;
		text-decoration: underline;
	}

	.footer-nav {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.footer-nav a {
		color: white;
		text-decoration: none;
		padding: 0.25rem 0;
		transition: all 0.2s ease;
		border-left: 3px solid transparent;
		padding-left: 0.75rem;
	}

	.footer-nav a:hover {
		border-left-color: rgba(255, 255, 255, 0.5);
		padding-left: 1rem;
		opacity: 0.8;
	}

	.footer-bottom {
		border-top: 1px solid rgba(255, 255, 255, 0.2);
		padding: 1.5rem 2rem;
		text-align: center;
		max-width: 1200px;
		margin: 0 auto;
	}

	.footer-bottom p {
		margin: 0;
		opacity: 0.7;
		font-size: 0.9rem;
	}

	/* Mobile Responsiveness */
	@media (max-width: 768px) {
		.wave svg {
			height: 60px;
		}

		.footer-content {
			grid-template-columns: 1fr;
			gap: 2rem;
			padding: 2rem 1rem 1.5rem;
			text-align: center;
		}

		.footer-section h3 {
			font-size: 1.3rem;
		}

		.footer-section h4 {
			font-size: 1rem;
			margin-bottom: 0.75rem;
		}

		.contact-info {
			align-items: center;
		}

		.contact-item {
			justify-content: center;
		}

		.footer-nav a {
			border-left: none;
			padding-left: 0;
			border-bottom: 2px solid transparent;
			padding-bottom: 0.5rem;
		}

		.footer-nav a:hover {
			border-left: none;
			border-bottom-color: rgba(255, 255, 255, 0.5);
			padding-left: 0;
		}

		.footer-bottom {
			padding: 1rem;
		}
	}

	@media (max-width: 480px) {
		.wave svg {
			height: 45px;
		}

		.footer-content {
			padding: 1.5rem 1rem 1rem;
			gap: 1.5rem;
		}

		.footer-section h3 {
			font-size: 1.2rem;
		}

		.contact-item {
			font-size: 0.9rem;
		}

		.footer-nav a {
			font-size: 0.9rem;
		}
	}
</style>
