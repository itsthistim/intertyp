import { Icon } from "astro-icon/components";
---

<div class="wave">
	<svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
		<path
			d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"
			class="shape-fill"></path>
	</svg>
</div>
<footer>
	<div class="about">
		<ul>
			<li><Icon name="fluent:location-16-regular" /><a href="https://maps.app.goo.gl/AxD4T8q99zNEYy3L7" target="_blank">Intertyp GmbH</a></li>
			<li><Icon name="fluent:mail-16-regular" /> <a href="mailto:stempel@intertyp.at">stempel@intertyp.at</a></li>
			<li><Icon name="fluent:call-16-regular" /> <a href="tel:+43 732 66 30 00">+43 732 66 30 00</a></li>
			<li><Icon name="fluent:clock-16-regular" /> Mo - Do 09:00 - 12:00 Uhr</li>
		</ul>
	</div>
	<div class="quicklinks">
		<ul>
			<li><a href="/">Start</a></li>
			<li><a href="/produkte">Produkte</a></li>
			<li><a href="/projekte">Kunden</a></li>
			<li><a href="/kontakt">Kontakt</a></li>
		</ul>
	</div>
	<div class="policies">
		<ul>
			<li><a href="/impressum">Impressum</a></li>
			<li><a href="/privacy">Datenschutz</a></li>
		</ul>
	</div>
</footer>

<style>
	.wave {
		width: 100%;
		overflow: hidden;
		line-height: 0;
		transform: rotate(180deg);
	}

	.wave svg {
		width: 100%;
		height: 87px;
	}

	.wave .shape-fill {
		/* fill: hsl(var(--clr-primary), 0.8); */
		fill: #329831;

	}

	footer {
		/* background-color: hsl(var(--clr-primary), 0.8); */
		background-color: #329831;
		color: white;
		padding: 4rem 4rem;
		display: flex;
		justify-content: space-evenly;
		flex-wrap: wrap;
	}

	footer ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	footer ul li {
		margin: 0.5rem 0;
		display: flex;
		align-items: center;
	}

	footer ul li [data-icon] {
		margin-right: 0.5rem;
		width: 1.2rem;
		height: 1.2rem;
	}

	footer ul li img {
		margin-right: 0.5rem;
		width: 1.5rem;
		height: 1.5rem;
	}

	@media (max-width: 768px) {
		footer {
			padding: 2rem 1rem;
			flex-direction: column;
			align-items: center;
			text-align: center;
		}
	}
</style>
