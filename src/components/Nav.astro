---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Button from "./ui/Button.astro";
import logo from "../assets/logo.png";

const { mode = "dark" } = Astro.props;

const projectsData = await fetch(new URL("/api/projekte", Astro.url));
const projects = await projectsData.json();

const productsData = await fetch(new URL("/api/produkte", Astro.url));
const products = await productsData.json();

console.log(products[0]);
---

<script>
	// Fix styling for hero component
	const nav = document.querySelector("nav");
	const body = document.body;

	if (nav && nav.classList.contains("light")) {
		body.classList.add("has-hero-nav");
	}

	document.addEventListener("astro:page-load", () => {
		const nav = document.querySelector("nav");
		const body = document.body;

		body.classList.remove("has-hero-nav", "has-regular-nav");

		if (nav) {
			if (nav.classList.contains("light")) {
				body.classList.add("has-hero-nav");
			} else {
				body.classList.add("has-regular-nav");
			}
		}

		// Active link highlighting
		const currentPath = window.location.pathname;
		const links = document.querySelectorAll("nav .links a");

		links.forEach((link) => {
			const href = link.getAttribute("href");
			if (href && (href === currentPath || (href !== "/" && currentPath.startsWith(href)))) {
				link.classList.add("active");
			} else {
				link.classList.remove("active");
			}
		});

		// Mobile menu toggle
		const menuButton = document.querySelector("nav [data-icon]");
		const linksContainer = document.querySelector("nav .links");

		if (menuButton && linksContainer) {
			menuButton.addEventListener("click", () => {
				linksContainer.classList.toggle("mobile-open");
			});

			links.forEach((link) => {
				link.addEventListener("click", () => {
					linksContainer.classList.remove("mobile-open");
				});
			});
		}
	});
</script>

<nav class={mode === "light" ? "light" : undefined}>
	<div class="logo">
		<a href="/"><Image src={logo} alt="Intertyp Logo" /></a>
	</div>
	<div class="links">
		<a href="/">Start</a>
		<div class="dropdown">
			<a href="/produkte">Produkte</a>
			<div class="dropdown-content" id="dropdown-produkte">
				{
					products.length > 0 ? (
						<ul class="dropdown-list">
							{products.map((product: any) => (
								<li class="dropdown-item">
									<a href={product.link.slug}>{product.link.name}</a>
								</li>
							))}
						</ul>
					) : (
						<span class="dropdown-loading">Keine Produkte gefunden.</span>
					)
				}
			</div>
		</div>
		<div class="dropdown">
			<a href="/projekte">Projekte</a>
			<div class="dropdown-content" id="dropdown-projekte">
				{
					projects.length > 0 ? (
						<ul class="dropdown-list">
							{projects.map((project: any) => (
								<li class="dropdown-item">
									<a href={project.link.slug || "#"}>{project.link.name}</a>
								</li>
							))}
						</ul>
					) : (
						<span class="dropdown-loading">Keine Projekte gefunden.</span>
					)
				}
			</div>
		</div>
		<a href="/kontakt">Kontakt</a>
	</div>

	<Button variant="ghost">
		<Icon name="ph:list" size="1.5rem" />
	</Button>
</nav>

<style>
	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		max-width: 1200px;
		padding: 1rem 2rem;
		margin: 0 auto 2rem;
		font-size: 1.2rem;
		position: relative;
		z-index: 50;
	}

	nav.light {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		margin: 0 auto;
	}

	.logo img {
		width: auto;
		max-height: 80px;
	}

	.links {
		display: flex;
		gap: 2.5rem;
	}

	.links a {
		color: #111;
		text-decoration: none;
		font-weight: 500;
		transition: color 0.3s ease;
	}

	.links a:hover {
		color: #444;
	}

	nav.light .links a {
		color: #fff;
	}

	nav.light .links a:hover {
		color: rgba(255, 255, 255, 0.7);
	}

	.links a.active {
		color: inherit;
		font-weight: 700;
		text-decoration: underline;
		text-decoration-color: rgb(var(--clr-primary));
		text-decoration-thickness: 2px;
		text-underline-offset: 3px;
	}

	[data-icon] {
		color: #111;
		display: none;
	}

	nav.light [data-icon] {
		color: #fff;
	} /* Dropdown */
	.dropdown {
		position: relative;
	}

	.dropdown-content {
		display: none;
		position: absolute;
		top: calc(100% + 5px);
		left: 0;
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
		backdrop-filter: blur(12px);
		min-width: 220px;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
		border: 1px solid rgba(255, 255, 255, 0.3);
		border-radius: 12px;
		padding: 0.5rem 0;
		z-index: 1000;
	}

	/* Hover Zone */
	.dropdown-content::before {
		content: "";
		position: absolute;
		top: -10px;
		left: 0;
		right: 0;
		height: 10px;
		background: transparent;
	}

	.dropdown:hover .dropdown-content {
		display: block;
	}

	.dropdown-list {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.dropdown-item {
		margin: 0;
		padding: 0;
	}

	.dropdown-item a {
		display: block;
		padding: 0.8rem 1.5rem;
		color: #374151;
		text-decoration: none;
		font-size: 0.95rem;
		font-weight: 500;
	}

	/* Dunkler Textfarbe f√ºr besseren Kontrast in Dropdowns */
	nav.light .dropdown-item a {
		color: #111;
		font-weight: 500;
	}

	.dropdown-item a:hover {
		background-color: rgba(59, 130, 246, 0.1);
		color: #1f2937;
	}

	nav.light .dropdown-item a:hover {
		color: #000;
		background-color: rgba(0, 0, 0, 0.05);
	}

	.dropdown-loading {
		display: block;
		padding: 0.8rem 1.5rem;
		color: #9ca3af;
		font-size: 0.9rem;
		font-style: italic;
	}

	/* Mobile Navigation */
	@media (max-width: 768px) {
		nav {
			padding: 0.8rem 1rem;
			margin: 0;
			position: fixed;
			top: 0;
			left: 0;
			right: 0;
			width: 100%;
			box-sizing: border-box;
			background: rgba(255, 255, 255, 0.95);
			backdrop-filter: blur(10px);
		}

		nav.light {
			background: rgba(0, 0, 0, 0.3);
			backdrop-filter: blur(10px);
		}

		.logo img {
			max-height: 60px;
		}

		.links {
			display: none;
		}

		[data-icon] {
			display: block;
		}

		.links.mobile-open {
			display: flex;
			flex-direction: column;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: rgba(255, 255, 255, 0.95);
			backdrop-filter: blur(10px);
			padding: 1rem;
			gap: 1rem;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		}

		nav.light .links.mobile-open {
			background: rgba(0, 0, 0, 0.9);
		}

		.dropdown-content {
			display: none !important;
		}
	}
</style>
