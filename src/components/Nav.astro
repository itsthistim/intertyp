<style>
	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 2rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.logo img {
		max-width: 135px;
		height: auto;
	}

	.links {
		display: flex;
		gap: 2.5rem;
	}

	.links a {
		text-decoration: none;
		color: #333;
		font-weight: 500;
	}

	.links a:hover {
		color: #666;
	}

	.nav-button .btn {
		background-color: #333;
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 4px;
		text-decoration: none;
	}

	.nav-button .btn:hover {
		background-color: #555;
	}

	@media (max-width: 768px) {
		nav {
			flex-direction: column;
			gap: 1rem;
		}

		.nav-links {
			flex-wrap: wrap;
			justify-content: center;
		}
	}
</style>
