---
import { Image } from "astro:assets";
import plotterVid1 from "@/assets/videos/plotter 2.mp4";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"section"> {
	title: string;
	subtitle?: string;
	src?: string;
}

const { title, subtitle = "", src = plotterVid1, class: className = "", ...rest } = Astro.props;

const isVideo = src && (src.endsWith(".mp4") || src.endsWith(".webm") || src.endsWith(".ogg"));
---

<section class:list={[className]} {...rest}>
	{
		isVideo ? (
			<video id="video1" autoplay loop muted playsinline>
				<source src={src} type="video/mp4" />
			</video>
		) : (
			<Image src={src} alt={title} width={1920} height={1080} />
		)
	}
	<div class="overlay"></div>
	<div class="header-content">
		<h1>{title}</h1>
		<p>{subtitle}</p>
	</div>
</section>

<style>
	section {
		position: relative;
		height: 40vh;
		width: 100vw;
		box-shadow:
			0 -30px 50px rgba(0, 20, 0, 0.3),
			0 30px 50px rgba(0, 20, 0, 0.3);
	}

	video {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: 1;
		transition: opacity 0.5s ease-in-out;
	}

	img {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: 1;
		transition: opacity 0.5s ease-in-out;
	}

	.overlay {
		position: absolute;
		inset: 0;
		background: rgba(0, 0, 0, 0.4);
		z-index: 2;
	}

	.header-content {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		z-index: 3;
		color: white;
		max-width: 96vw;
		width: 100%;
		line-height: 1.1;
		word-break: break-word;
		padding: 0 2vw;
		box-sizing: border-box;
		text-align: center;
	}

	.header-content h1 {
		font-size: clamp(2rem, 7vw, 5rem);
		font-weight: 750;
		margin-bottom: 1rem;
		line-height: 1.05;
		word-break: break-word;
		overflow-wrap: break-word;
	}

	.header-content p {
		font-size: clamp(1rem, 3vw, 1.6rem);
		margin-bottom: 2rem;
		word-break: break-word;
		overflow-wrap: break-word;
	}

	@media (max-width: 900px) {
		.header-content {
			max-width: 98vw;
			padding: 0 3vw;
		}
		section {
			height: 28vh;
		}
	}

	@media (max-width: 600px) {
		.header-content {
			max-width: 100vw;
			padding: 0 1vw;
		}
		section {
			height: 18vh;
		}
	}
</style>
